{
  "name": "safetap",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:deploy": "prisma generate && prisma migrate deploy && next build",
    "build:vercel": "prisma generate --no-engine && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "CI=true eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:ci": "playwright test --reporter=github",
    "e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run e2e",
    "postinstall": "prisma generate",
    "check-all": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "prepare": "husky",
    "accessibility": "axe --chrome --save accessibility-report.json http://localhost:3000",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^3.9.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.14.0",
    "@prisma/extension-accelerate": "^1.2.1",
    "@types/nodemailer": "^7.0.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "cuid": "^3.0.0",
    "lucide-react": "^0.446.0",
    "next": "^15.5.0",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "postcss": "^8.4.38",
    "posthog-js": "^1.260.1",
    "posthog-node": "^5.7.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.0",
    "tailwindcss": "^3.4.7",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.5.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4",
    "webpack-bundle-analyzer": "^4.10.1",
    "rollup": "^4.50.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.0"
  },
  "overrides": {
    "rollup": "^4.50.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
